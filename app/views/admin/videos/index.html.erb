<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header" style="margin: 10px 0 15px !important;">Listing Videos</h2>
      </div>
      <div class="new" style="margin-bottom: 15px;">
        <%= link_to "New Video", new_admin_video_path, class: "btn btn-primary" %>
      </div>
      <% if @videos.present? %>
        <table class="table table-responsive table-bordered">
          <thead>
            <tr>
              <th>Id</th>
              <th>Video Url</th>
              <th>Title</th>
              <th>Status</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @videos.each do |video| %>
              <tr>
                <td><%= video.id %></td>
                <td><a href="<%= video.video_url %>"><%= video.video_url %></a></td>
                <td><%= video.title %></td>
                <td>
                  <% if video.status == false %>
                    <p>❌</p>
                  <% else %>
                    <p>✔️</p>
                  <% end %>
                </td>
                <td><%= video.created_at %></td>
                <td><%= video.updated_at %></td>
                <td>
                  <%= link_to 'Show', admin_video_path(video),class:"btn btn-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @vidoes %>
      <% else %>
        <h1 class="not-found">No Video Found</h1>
      <% end %>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
